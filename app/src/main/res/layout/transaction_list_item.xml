<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:background="#ffffff"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgAvatar"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <TextView
            android:id="@+id/txtAvatar"
            android:textColor="#000"
            android:gravity="center"
            android:layout_width="40dp"
            android:textSize="16sp"
            android:layout_height="40dp"
            android:text="P"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/llDetails"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtTransactionDesc"
                android:layout_width="wrap_content"
                android:textSize="16dp"
                android:text="Parking"
                android:textColor="#000"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtExpenseGroupname"
                android:layout_width="wrap_content"
                android:textSize="14dp"
                android:text="Trip"
                android:layout_below="@+id/txtTransactionDesc"
                android:textColor="#888"
                android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:gravity="right"
                android:layout_weight="1"
                android:layout_alignRight="@+id/llDetails"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtAmountTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="Amount"
                    android:textSize="15dp"/>

                <TextView
                    android:id="@+id/txtTranAmount"
                    android:layout_width="wrap_content"
                    android:textSize="15dp"
                    android:text="100.00"
                    android:textColor="#888"
                    android:visibility="visible"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>